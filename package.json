{
    "name"        : "pdfkiwi-node",
    "version"     : "0.1.0",
    "description" : "A node library for interacting with Pdf.kiwi API",
    "repository"  : "git@github.com:pdfkiwi/node-lib.git",
    "license"     : "MIT",
    "scripts"     : {
        "build"         : "babel src -d lib/",
        "prepublish"    : "yarn run build",
        "test"          : "yarn run build && babel-node node_modules/.bin/_mocha --recursive test/specs/*.test.js",
        "test:coverage" : "yarn run build && babel-node node_modules/.bin/istanbul cover --report html node_modules/.bin/_mocha -- --recursive test/specs/*.test.js",
        "lint"          : "eslint --max-warnings 0 --ext .js src test/specs"
    },
    "devDependencies": {
        "babel-cli"                 : "^6.24.1",
        "babel-preset-es2015"       : "^6.24.1",
        "chai"                      : "^3.5.0",
        "eslint"                    : "^3.19.0",
        "eslint-config-airbnb-base" : "^11.2.0",
        "eslint-plugin-import"      : "^2.2.0",
        "istanbul"                  : "^0.4.5",
        "mocha"                     : "^3.4.1"
    },
    "engines": {
        "node": ">= 4"
    }
}
